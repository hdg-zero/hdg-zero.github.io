---
// site/src/components/ProjectCard.astro
// Ultra Pro Project Card with Liquid Glass
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
    project: CollectionEntry<'projects'>;
}

const base = import.meta.env.BASE_URL;
const { project } = Astro.props;
const { title, description, tags, cover, coverAlt, linkDemo, linkRepo } = project.data;
---

<article class="group glass-card h-full flex flex-col">
    <!-- Image container -->
    <a href={`${base}projects/${project.slug}`} class="block aspect-video overflow-hidden relative">
        {cover ? (
            <Image 
                src={cover} 
                alt={coverAlt || title} 
                class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-700 ease-out"
                width={600}
                height={338}
            />
        ) : (
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-[var(--bg-secondary)] to-[var(--bg-elevated)]">
                <svg class="w-16 h-16 text-[var(--glass-border)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
        )}
        
        <!-- Overlay gradient -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Quick links overlay -->
        <div class="absolute inset-0 flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-all duration-300">
            {linkDemo && (
                <a 
                    href={linkDemo} 
                    target="_blank" 
                    rel="noopener"
                    class="p-3 rounded-full bg-[var(--accent-primary)] text-white hover:scale-110 transition-transform shadow-lg shadow-[var(--accent-glow)]"
                    onclick="event.stopPropagation()"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                </a>
            )}
            {linkRepo && (
                <a 
                    href={linkRepo} 
                    target="_blank"
                    rel="noopener" 
                    class="p-3 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white hover:scale-110 transition-transform"
                    onclick="event.stopPropagation()"
                >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                </a>
            )}
        </div>
    </a>

    <!-- Content -->
    <div class="p-6 flex-1 flex flex-col">
        <!-- Tags -->
        <div class="flex gap-2 mb-4 flex-wrap">
            {tags.slice(0, 3).map(tag => (
                <span class="tag">{tag}</span>
            ))}
            {tags.length > 3 && (
                <span class="tag">+{tags.length - 3}</span>
            )}
        </div>
        
        <!-- Title -->
        <a href={`${base}projects/${project.slug}`} class="block">
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[var(--accent-primary)] transition-colors line-clamp-1">
                {title}
            </h3>
        </a>
        
        <!-- Description -->
        <p class="text-[var(--text-secondary)] text-sm line-clamp-2 mb-4 flex-1">
            {description}
        </p>

        <!-- Footer links -->
        <div class="flex items-center justify-between pt-4 border-t border-[var(--glass-border)]">
            <a 
                href={`${base}projects/${project.slug}`}
                class="text-sm font-medium text-[var(--accent-primary)] hover:text-[var(--accent-secondary)] transition-colors inline-flex items-center gap-2 group/link"
            >
                <span data-projects-view-details>Voir le d√©tail</span>
                <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
            
            <div class="flex gap-3">
                {linkDemo && (
                    <a 
                        href={linkDemo} 
                        target="_blank"
                        rel="noopener"
                        class="text-[var(--text-muted)] hover:text-[var(--accent-primary)] transition-colors"
                        title="View live"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                    </a>
                )}
                {linkRepo && (
                    <a 
                        href={linkRepo} 
                        target="_blank"
                        rel="noopener"
                        class="text-[var(--text-muted)] hover:text-[var(--accent-primary)] transition-colors"
                        title="Source code"
                    >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                        </svg>
                    </a>
                )}
            </div>
        </div>
    </div>
</article>
